@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Aranzman: @ViewBag.Aranzman.Naziv</h2>
<table>
    <tr>
        <td rowspan="3">
            <img src="~/Photos/@ViewBag.Aranzman.Poster.Name" height="261" width="410" />
        </td>
        <td>
            &nbsp;&nbsp;&nbsp;
        </td>
        <td>
            <table class="table-hover">
                <tr>
                    <td>Tip aranzmana:</td>
                    <td>
                        @ViewBag.Aranzman.TipAranzmana
                    </td>
                </tr>
                <tr>
                    <td>
                        Tip prevoza:
                    </td>
                    <td>
                        @ViewBag.Aranzman.TipPrevoza
                    </td>
                </tr>
                <tr>
                    <td>
                        Tip lokacije:
                    </td>
                    <td>
                        @ViewBag.Aranzman.TipPrevoza
                    </td>
                </tr>
                <tr>
                    <td>
                        Datum pocetk:&nbsp;&nbsp;
                    </td>
                    <td>
                        @ViewBag.Aranzman.DatumPocetkaPutovanja.ToString("dd/MM/yyyy")
                    </td>
                </tr>
                <tr>
                    <td>
                        Datum zavrsetka:&nbsp;&nbsp;
                    </td>
                    <td>
                        @ViewBag.Aranzman.DatumZavrsetkaPutovanja.ToString("dd/MM/yyyy")
                    </td>
                </tr>
                <tr>
                    <td>
                        Datum zavrsetka:&nbsp;&nbsp;
                    </td>
                    <td>
                        @ViewBag.Aranzman.VremeNalazenja.ToString("HH:mm")
                    </td>
                </tr>
                <tr>
                    <td>
                        Max broj putnika:
                    </td>
                    <td>
                        @ViewBag.Aranzman.MaxBrojPutnika
                    </td>
                </tr>
                <tr>
                    <td>
                        Opis:
                    </td>
                    <td>
                        @ViewBag.Aranzman.Opis
                    </td>
                </tr>
                <tr>
                    <td>
                        Program:
                    </td>
                    <td>
                        @ViewBag.Aranzman.Program
                    </td>
                </tr>
                @*<tr>
                        <td>
                            Smestaj:
                        </td>
                        <td>
                            @ViewBag.Aranzman.idSmestaja
                        </td>
                    </tr>*@
                <tr>
                    <td>
                        Mesto nalazenja:
                    </td>
                    <td>
                        @ViewBag.Aranzman.MestoNalazenja.Adresa
                        @ViewBag.Aranzman.MestoNalazenja.GeografskaDuzina
                        @ViewBag.Aranzman.MestoNalazenja.GeografskaSirina
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
<br />
<h2>Smestaj: @ViewBag.Smestaj.Naziv</h2>
<table>
    <tr>
        <td>
            <table class="table-hover">
                <tr>
                    <td>Tip smestaja:</td>
                    <td>
                        @ViewBag.Smestaj.TipSmestaja
                    </td>
                </tr>
                <tr>
                    <td>
                        Broj zvezdica:
                    </td>
                    <td>
                        @ViewBag.Smestaj.BrojZvezdica
                    </td>
                </tr>
                <tr>
                    <td>
                        Bazen:
                    </td>
                    @if (@ViewBag.Smestaj.Bazen == false)
                    {
                        <td>
                            NE
                        </td>
                    }
                    else
                    {
                        <td>
                            DA
                        </td>

                    }
                </tr>
                <tr>
                    <td>
                        Spa centar:
                    </td>
                    @if (@ViewBag.Smestaj.SpaCentar == false)
                    {
                        <td>
                            NE
                        </td>
                    }
                    else
                    {
                        <td>
                            DA
                        </td>

                    }
                </tr>
                <tr>
                    <td>
                        Za osobe sa invaliditetom:
                    </td>
                    @if (@ViewBag.Smestaj.ZaOsobeInv == false)
                    {
                        <td>
                            NE
                        </td>
                    }
                    else
                    {
                        <td>
                            DA
                        </td>

                    }
                </tr>
                <tr>
                    <td>
                        Wi Fi:
                    </td>
                    @if (@ViewBag.Smestaj.WiFi == false)
                    {
                        <td>
                            NE
                        </td>
                    }
                    else
                    {
                        <td>
                            DA
                        </td>

                    }
                </tr>
            </table>
        </td>
    </tr>
</table>
<br />
<form action="/Home/SmestajneJediniceNeReg" method="post">
    @*<input type="text" name="id" value="@a.Id" hidden />*@
    <input type="submit" value="SmestajneJedinice" />
</form>
<br />
<br />
<h3>Komentar:</h3>
<table>
    @foreach (var k in ViewBag.Komentari)
    {
        <tr>
            <td>
                <table class="table-hover">

                    <tr>
                        <td>
                             Tekst:
                        </td>
                        <td>
                            @k.TekstKomentara
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Ocena:
                        </td>
                        <td>
                            @k.Ocena
                        </td>

                    </tr>
                    <tr>
                        <td>Turista:</td>
                        <td>
                            @k.Turista.KorisnickoIme
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    }
</table>

<br />
<a href="~/Home/Index">Nazad</a>