@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <form action="~/MenadzerFun/IzmeniSJ" method="post">
        <div>
            @ViewBag.Message
        </div>
        <h1>Izmena smestajne jedinice</h1><br />
        <label for="dozvoljenoGostiju">Dozvoljeno gostiju</label><br />
        <input type="number" name="dozvoljenoGostiju" value="@ViewBag.smestajJedn.DozvoljenoGostiju" /><br />

        <label>Dozvoljeni boravak kucnih ljubimaca:</label>
        <select name="kucniLjubimci">
            @if (ViewBag.smestajJedn.KucniLjubimci == true)
            {
                <option value="true" selected>DA</option>
                <option value="false">NE</option>
            }
            else
            {
                <option value="false" selected>NE</option>
                <option value="true">DA</option>
            }
        </select>
        <br />

        <label for="cena">Cena za celu smestajnu jedinicu</label><br />
        <input type="text" name="cena" value="@ViewBag.smestajJedn.Cena" /><br />

        <input type="text" name="id_sj" value="@ViewBag.smestajJedn.Id" hidden />
        <input type="submit" value="Modfikuj" />

    </form>
    <br />
    <form action="~/MenadzerFun/SmestajneJedinice" method="post">
        <input type="submit" value="Nazad" />
    </form>
</body>
</html>
